<%= simple_form_for [list, review],
  data: {
    review_target: "form",
    action: "submit->review#send"
  } do |f| %>
  <%= f.input :commentaire, placeholder: "Add your review here..." %>
  <%= f.input :rating, as: :select, collection: (1..5), required: true, label: false %>
  <%= f.submit class: "btn btn-flat mt-2" %>
<% end %>
